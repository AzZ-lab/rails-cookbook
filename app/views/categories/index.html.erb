<div class="banner" style="background-image: url('<%= image_path "banner.jpg" %>')">
  <div>
    <h1>CookBook</h1>
    <h3>Save your favourite recipes</h3>
  </div>
</div>

<div class="container w-75">
  <div class="info-top">
    <h2>List of Categories</h2>
    <%= link_to 'New category', new_category_path, class: "btn btn-warning" %>
  </div>
</div>



<%= link_to "Add New Category", new_category_path %>

<ul>
  <% @categories.each do |category| %>
    <li><%= link_to category.name, category_path(category) %></li>
  <% end %>
</ul>
